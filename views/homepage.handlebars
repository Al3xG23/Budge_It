<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div id="addBill" class="row mt-4">
  <div class="col-md-6">
    <h3>Add a New Bill:</h3>

    <form class="form new-bill-form">
      <div class="form-group">
        <label for="bill-name">bill name:</label>
        <input class="form-input" type="text" id="bill-name" name="bill-name" />
      </div>
      <div class="form-group">
        <label for="bill-amount">bill amount ($):</label>
        <input class="form-input" type="number" step="0.01" id="bill-amount" name="bill-amount" />
      </div>
      <div class="form-group">
        <div class="form-group">
          <label for="bill-due-date">bill due date: </label>
          <input class="form-input" type="date" id="bill-due-date" name="bill-due-date" />
        </div>        
        <div class="form-group">
          <label for="bill-type">select bill type: </label>
          <select id="bill-type" class="form-input" name="bill-type">
            <option value="" selected disabled>---Select A Bill Type---</option>
            <option value="Transportaion">Transportation</option>
            <option value="Groceries">Groceries</option>
            <option value="Utility">Utility</option>
            <option value="Entertainment"> Entertainment</option>
            <option value="Rent/Mortgage">Rent/Mortgage</option>
            <option value="Medical">Medical</option>
            <option value="Savings">Savings</option>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{!-- {{#if bills.length}} --}}
  <div class="col-md-6 bill-list">
    <h3 id="current" >Current Bills:</h3>
    <div id="scrollBar">
    {{#each bills as |bill|}}
    <div  class="row mb-2">
      <div class="col-md-8">
        <h6><span class="blue" >{{bill.billName}}:</span> ${{bill.amount}} </br>Due on: {{bill.dueDate}}</h6>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{bill.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
    </div>
    <h3>Total Bills: ${{billsTotal}}</h3>
  </div>
  {{!-- {{/if}} --}}
</div>
<div id="calendar"></div>

<script src="./js/profile.js"></script>